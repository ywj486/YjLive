<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hot_find_img_hHead"
            android:layout_width="80dp"
            android:layout_height="80dp"
            fresco:actualImageScaleType="centerInside"
            fresco:roundAsCircle="true"
            android:padding="5dp"
            fresco:roundWithOverlayColor="@color/gray_bg"
            fresco:roundingBorderColor="@color/grey"
            fresco:roundingBorderWidth="1dp" />
        <TextView
            android:id="@+id/hot_find_tv_hName"
            android:layout_toRightOf="@id/hot_find_img_hHead"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/hot_find_tv_hSite"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_toRightOf="@id/hot_find_img_hHead"
            android:layout_below="@id/hot_find_tv_hName"
            android:layout_height="wrap_content" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:viewAspectRatio="1"
        android:id="@+id/hot_find_img_hShow"
        android:layout_below="@+id/hot_find_img_hHead"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/hot_find_tv_state"
        android:layout_width="50dp"
        android:focusable="false"
        android:layout_height="50dp"
       android:background="@drawable/tv_selector"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>